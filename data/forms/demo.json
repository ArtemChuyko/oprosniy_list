{
  "id": "demo-form-1",
  "slug": "demo",
  "title": "Demo Questionnaire",
  "description": "This is a sample questionnaire form for demonstration purposes",
  "sections": [
    {
      "id": "section-1",
      "title": "Personal Information",
      "description": "Please provide your basic information",
      "questions": [
        {
          "id": "q1",
          "type": "text",
          "label": "Full Name",
          "placeholder": "Enter your full name",
          "required": true,
          "help": {
            "mode": "modal",
            "blocks": [
              {
                "type": "text",
                "content": "Please enter your full legal name exactly as it appears on your official identification documents (driver's license, passport, etc.).\n\nThis should include:\n- First name\n- Middle name (if applicable)\n- Last name\n\nDo not use nicknames or abbreviations."
              },
              {
                "type": "image",
                "content": "https://via.placeholder.com/600x300?text=Example+ID+Document",
                "caption": "Example: How your name appears on official documents",
                "alt": "Example ID document"
              }
            ]
          }
        },
        {
          "id": "q2",
          "type": "email",
          "label": "Email Address",
          "placeholder": "your.email@example.com",
          "required": true,
          "validation": {
            "pattern": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
            "message": "Please enter a valid email address"
          }
        },
        {
          "id": "q3",
          "type": "tel",
          "label": "Phone Number",
          "placeholder": "+1 (555) 123-4567",
          "required": true
        }
      ]
    },
    {
      "id": "section-2",
      "title": "Preferences",
      "description": "Tell us about your preferences",
      "questions": [
        {
          "id": "q4",
          "type": "select",
          "label": "Preferred Contact Method",
          "required": true,
          "options": ["Email", "Phone", "SMS", "Mail"],
          "help": {
            "mode": "sidebar",
            "blocks": [
              {
                "type": "text",
                "content": "Select your preferred method of communication. We will use this method to contact you regarding your submission."
              },
              {
                "type": "gallery",
                "content": "https://via.placeholder.com/400x300?text=Email+Icon,https://via.placeholder.com/400x300?text=Phone+Icon,https://via.placeholder.com/400x300?text=SMS+Icon,https://via.placeholder.com/400x300?text=Mail+Icon",
                "caption": "Available contact methods",
                "alt": "Contact method icons"
              },
              {
                "type": "video",
                "content": "https://sample-videos.com/video123/mp4/720/big_buck_bunny_720p_1mb.mp4",
                "caption": "Watch this video to learn more about our contact methods"
              },
              {
                "type": "lottie",
                "content": "https://lottie.host/embed/example.json"
              }
            ]
          }
        },
        {
          "id": "q5",
          "type": "radio",
          "label": "How did you hear about us?",
          "required": false,
          "options": ["Social Media", "Friend/Colleague", "Search Engine", "Advertisement", "Other"]
        },
        {
          "id": "q6",
          "type": "checkbox",
          "label": "I consent to the terms and conditions",
          "required": true
        }
      ]
    },
    {
      "id": "section-3",
      "title": "Additional Information",
      "questions": [
        {
          "id": "q7",
          "type": "textarea",
          "label": "Additional Comments",
          "placeholder": "Please share any additional information...",
          "required": false,
          "validation": {
            "max": 1000,
            "message": "Comments must be less than 1000 characters"
          }
        },
        {
          "id": "q8",
          "type": "text",
          "label": "Signature",
          "placeholder": "Type your full name as signature",
          "required": true
        }
      ]
    }
  ],
  "createdAt": "2024-01-01T00:00:00.000Z",
  "updatedAt": "2024-01-01T00:00:00.000Z"
}
